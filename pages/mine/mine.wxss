.btn {
    margin-top: 20rpx;
}

.user-info {
    width: 100%;
    position: relative;
}

.user-info>image {
    width: 100%;
    filter: blur(10px);
    -webkit-filter: blur(10px);
}

.user-message {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
}

.user-message image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    -ms-border-radius: 50%;
    -o-border-radius: 50%;
}

.mine-fav {
    position: absolute;
    bottom: 20rpx;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: 100%;
    background-color: #fff;
    z-index: 99;
}

.mine-fav>view {
    flex: 1;
    height: 100rpx;
}