page {
    height: 100%;
    padding-bottom: 120rpx;
}

.btn {
    color: green;
    font-size: 38rpx;
    padding: 20rpx;
    margin-top: 10rpx;
}

.title {
    height: 60rpx;
    line-height: 60rpx;
    border-top: 2rpx solid #666;
    border-bottom: 2rpx solid #666;
    font-size: 32rpx;
    margin-top: 20rpx;
    padding-left: 30rpx;
}

.shopcar-list {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10rpx;
    border-bottom: 2rpx solid #666;
}

.checkbox {
    flex: 2;
    text-align: left;
}

.image {
    flex: 3;
}

.image image {
    width: 100%;
}

.right {
    text-align: center;
    flex: 4;
    width: 100%;
    display: flex;
    flex-direction: column;
    /* justify-content: space-between; */
    justify-content: space-between;
}

.right-top {
    flex: 1;
    padding-left: 10rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.right-bottom {
    margin-top: 40rpx;
    flex: 1;
    display: flex;
    align-content: center
}

.price {
    flex: 1;
}

.count {
    flex: 1;
    display: flex;
    text-align: right;
}

.jian,
.jia {
    border: 1rpx solid #eee;
    width: 60rpx;
    text-align: center;
    /* justify-content: space-between; */
}

.num {
    width: 60rpx;
    text-align: center;
}

.footer {
    position: fixed;
    display: flex;
    align-items: center;
    bottom: 0;
    left: 0;
    width: 100%;
    border-top: 1rpx solid #666;
    height: 100rpx;
    background-color: #eee;
    z-index: 99;
}

.footer-left {
    flex: 4;
    display: flex;
    align-items: center;
    padding: 20rpx;
}

.footer-checkbox {
    flex: 1;
    text-align: center;
    width: 148rpx;
}

.footer-total {
    flex: 3;
    text-align: right;
}

.footer-right {
    flex: 1;
    padding: 20rpx;
    background-color: red;
    color: #fff;
    height: 100%;
    text-align: center;
}

.footer-pay {
    height: 100%;
}