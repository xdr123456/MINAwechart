page {
    padding-bottom: 90rpx
}

.top {
    border-bottom: 4rpx solid #666;
}

.top swiper {
    height: 70vw;
    text-align: center;
}

.top swiper swiper-item image {
    width: 60%;
}

.txt {
    display: flex;
    justify-content: center;
    align-items: center;
}

.txt-left {
    flex: 4;
    padding: 10rpx;
}

.txt-right {
    flex: 1;
    border-left: 1rpx solid #eee;
    text-align: center;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    height: 90rpx
}

.kefu,
.share {
    position: relative;
}

.kefu button,
.share button {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    opacity: 0;
}

.kefu,
.share,
.car,
.addcar,
.pay {
    flex: 1;
    text-align: center;
}

.addcar {
    background-color: orange;
    height: 90rpx;
    line-height: 90rpx;
    color: #fff;
}

.pay {
    background-color: red;
    height: 90rpx;
    line-height: 90rpx;
    color: #fff;
}

